{
  "name": "my-react-boilerplate",
  "version": "0.0.1",
  "description": "My React project boilerplate",
  "main": "index.html",
  "scripts": {
    "babelify": "browserify -t babelify src/jsx/app.jsx -o src/js/bundle.js",
    "watchify": "watchify -t babelify src/jsx/app.jsx -o src/js/bundle.js -v",
    "beefy": "beefy src/jsx/app.jsx:js/bundle.js --live --open --cwd src -- -t babelify",
    "licensify": "browserify -t babelify src/jsx/app.jsx -p licensify -o src/js/bundle.js",
    "minify:html": "html-minifier -c html-minifier.conf src/index.html -o dist/index.html",
    "minify:js": "uglifyjs src/js/bundle.js -o dist/js/bundle.js --comments '/generated by licensify/'",
    "minify:css": "cleancss -o dist/css/app.css src/css/app.css",
    "prebuild": "mkdir -p dist/js && mkdir -p dist/css",
    "build": "npm run prebuild && npm run licensify && npm run minify:html && npm run minify:js && npm run minify:css",
    "clean": "rm -rf dist/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Umi Uyura",
  "license": "MIT",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babelify": "^6.2.0",
    "beefy": "sberan/beefy#fix-live-reload-reliability",
    "browserify": "^11.0.1",
    "clean-css": "^3.3.9",
    "html-minifier": "^0.7.2",
    "licensify": "^1.4.0",
    "uglify-js": "^2.4.24",
    "watchify": "^3.3.1"
  }
}
