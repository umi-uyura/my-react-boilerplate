{
  "name": "my-react-boilerplate",
  "version": "0.0.1",
  "description": "My React project boilerplate",
  "main": "index.html",
  "scripts": {
    "babelify": "browserify -t babelify src/app.jsx -o build/app.js",
    "watchify": "watchify -t babelify src/app.jsx -o build/app.js -v",
    "beefy": "beefy src/app.jsx:build/app.js src --live --open -- -t babelify",
    "licensify": "browserify -t babelify src/app.jsx -p licensify -o build/app.js",
    "minify:html": "html-minifier -c html-minifier.conf index.html -o public/index.html",
    "minify:js": "uglifyjs build/app.js -o public/build/app.js --comments '/generated by licensify/'",
    "minify:css": "cleancss -o public/style/app.css style/app.css",
    "prebuild": "mkdir -p public/build && mkdir -p public/style",
    "build": "npm run prebuild && npm run licensify && npm run minify:html && npm run minify:js && npm run minify:css",
    "clean": "rm -rf public/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Umi Uyura",
  "license": "MIT",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "beefy": "sberan/beefy#fix-live-reload-reliability",
    "browserify": "^11.0.1",
    "clean-css": "^3.3.7",
    "html-minifier": "^0.7.2",
    "licensify": "^1.4.0",
    "uglify-js": "^2.4.24",
    "watchify": "^3.3.1"
  }
}
